<div class="accordion js-accordion" data-acf-field="repeater" data-acf-label="List">
  {{#each list}}
  <div class="accordion__item fadeEl{{#if @first}} active{{/if}}" data-acf-subfield="row">
    <div class="accordion__summary">
      <h4 class="title-h4 accordion__title" data-acf-subfield="text" data-acf-label="Title">
        {{ this.title }}
      </h4>

      <div class="accordion__button">
        <svg>
          <use xlink:href="/img/symbol/svg/sprite.symbol.svg#arrow-right"></use>
        </svg>
      </div>
    </div>

    <div class="accordion__content">
      <p class="text-main accordion__text" data-acf-subfield="textarea" data-acf-label="Text">
        {{ this.text }}
      </p>
    </div>
  </div>
  {{/each}}
</div>